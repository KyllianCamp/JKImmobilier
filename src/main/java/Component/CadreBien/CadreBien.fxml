<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="Component.CadreBien.BiensController" id="background">
    <ImageView fx:id="imageView" fitWidth="100" fitHeight="100" />
    <Label fx:id="titleLabel" text="Désignation du produit" style="-fx-font-weight: bold; -fx-font-size: 14;" />
    <Label fx:id="locationLabel" text="Bordeaux, Aquitaine, France" style="-fx-font-size: 12;" />
    <Label fx:id="detailsLabel" text="🛏 5 couchages" style="-fx-font-size: 12;" />
    <Label fx:id="descriptionLabel" text="Description du produit" wrapText="true" />
    <HBox spacing="10" alignment="center">
        <Button fx:id="modifyButton" text="Modifier" style="-fx-background-color: blue; -fx-text-fill: white;" />
        <Button fx:id="deleteButton" text="Supprimer" style="-fx-background-color: red; -fx-text-fill: white;" />
    </HBox>
</VBox>
